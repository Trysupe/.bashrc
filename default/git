#!/bin/bash

# Ein Lock erstellen, dass die Einstellungen nicht versucht gleichzeitig mehrmal gesetzt zu werden
lock_file=/tmp/bashrc_lock_file_$(date '+%d-%m-%y')

[[ -f "${lock_file}" ]] && return
touch "${lock_file}"

git config --global user.name "Felix Schneider"
git config --global core.autocrlf "input"
git config --global help.autocorrect 15

# In wsl die den credential manager von windows benutzen, da er um EINIGES schneller ist
# https://stackoverflow.com/a/47350274
# Zus√§tzlich keinen pager verwenden
# shellcheck disable=2154
if [[ ${is_wsl} == true ]]; then
    git config --global credential.helper "/mnt/c/Program\ Files/Git/mingw64/bin/git-credential-manager-core.exe"
else
    git config --global --unset credential.helper
fi
alias git='git --no-pager'

rm -f "${lock_file}"