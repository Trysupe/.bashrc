#!/bin/bash

########### Farben ###########
GRAU="\[\e[1;30m\]"
DEFAULT="\[\e[0m\]"
GRUEN="\[\e[32m\]"
ROT="\[\e[31m\]"
PINK="\[\e[35m\]"
CYAN="\[\e[1;36m\]"
##############################

# Berechnung dafÃ¼r wie lang das Kommando gedauert hat
function timer_start {
    timer=${timer:-$SECONDS}
}

function timer_stop {
    timer_show=""
    delta=$((SECONDS - timer))
    [[ ${delta} -lt 10 ]] && {
        unset timer
        return
    }

    ((minuten = (delta % 3600) / 60))
    ((sekunden = delta % 60))

    [[ ${minuten} != 0 ]] && timer_show=$(printf "%dm " ${minuten})
    timer_show+=$(printf "%ds" ${sekunden})

    unset timer
}

trap 'timer_start' DEBUG

# Erstmal eine Leerzeile fÃ¼r mehr Platz
PS1="\n"

# Linie am Anfang
PS1+="${GRAU}\342\224\214\342\224\200"

# Uhrzeit
PS1+="[${DEFAULT}\t"

# ]-[
PS1+="${GRAU}]-[${DEFAULT}"

# Zeichen fÃ¼r Returncode
PS1+='`[[ $? = 0 ]] && echo "\[\e[32m\]:)" || echo "\[\e[31m\]:("`'

# ]-[
PS1+="${GRAU}]-[${DEFAULT}"

# Unterscheidung nach Username
#   - root:  roter  username und "ðŸ’€"
#   - sonst: grÃ¼ner username und "@"
[[ $(id -u) -eq 0 ]] && PS1+="${ROT}\uðŸ’€" || PS1+="${GRUEN}\u${PINK}@"

# Farbe fÃ¼r den Hostnamen generieren. Unterscheidung nach SSH Session
#   - SSH-Session:    Hostname rot
#   - Lokale Session: Hostname grÃ¼n
PS1+='`[[ -z ${SSH_CLIENT} ]] && echo "\[\e[32m\]" || echo "\[\e[31m\]"`'

# Hostname
PS1+="\H"

# WSL Ausgabe
#    - bei WSL: "]-[WSL" Einschub
#    - sonst:   Nichts
PS1+='`[[ ${is_wsl} == true ]] && echo "\[\e[1;30m\]]-[\[\e[31m\]WSL"`'

# ]-[
PS1+="${GRAU}]-[${DEFAULT}"

# Pfad, es wird noch ein "/" angehÃ¤ngt, wenn der aktuelle Pfad != "/" ist
PS1+="${CYAN}"'$(pwd)''`[[ $(pwd) != "/" ]] && echo "/"`'"${DEFAULT}"

# Git Farbe
PS1+='`
if [[ $(git status 2>/dev/null) =~ (modified|geÃ¤ndert|ahead| vor |behind|hinter|deleted|gelÃ¶scht|neu|new|Unversioniert|Untracked) ]]; then
    echo "\[\e[31m\]"
elif [[ $(git --no-pager log origin/$(git rev-parse --abbrev-ref HEAD 2>&1)..HEAD --pretty="%cd" 2>&1) =~ (fatal|:) ]]; then
    echo "\[\e[31m\]"
else
    echo "\[\e[32m\]"
fi`'

# Git Branch, wenn es sich um ein Git Verzeichnis handelt
PS1+='`__git_ps1 " (%s)"`'

# Wenn das Kommando lÃ¤nger als 10 Sekunden gedauert hat wird die Dauer ausgegeben
PROMPT_COMMAND=timer_stop
PS1+='`[[ -n ${timer_show} ]] && echo "\[\e[1;30m\]]-[\[\e[0m\]${timer_show}"`'

# Klammer zu nach dem Pfad und in die nÃ¤chste Zeile
PS1+="${GRAU}]"$'\n' # \n: https://stackoverflow.com/a/21561763/14638014

# Untere Linie
PS1+="${GRAU}\342\224\224\342\224\200\342\224\200> ${DEFAULT}"
