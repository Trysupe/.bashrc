#!/bin/bash

alias ..="cd .."; alias ,,=".."; alias ...="cd ../.."; alias ....="cd ../../.."; alias .....="cd ../../../.."; alias ......="cd ../../../../.."
alias dc='cd'
alias ls="ls -lh --color=always --time-style='+%H:%M %d.%m.%Y'"; alias l='ls'; alias ll='ls'; alias lll='ls'; alias sl='ls'; alias la="ls -A"
alias rm='rm -R'

alias upgradable='apt list --upgradable'
alias update='sudo apt update && apt list --upgradable'

alias b='exec $SHELL'
alias ct="cd /tmp/; [[ -d testing ]] || git clone git@github.com:Trysupe/testing.git; cd testing/"
alias mygrep='grep -ins --color=always'
alias tf='tail -f -n 1000'

alias cp='cp -r'
alias df="df -h"
alias ip='ip -color'
alias git="git --no-pager" #Kein Pager f√ºr alle git Befehle anzeigen
alias nano='nano -l -T 4'
alias less='less -IN'
alias pwd='pwd -P' #Den absoluten Pfad angeben und keine Symnlinks verwenden
alias time="stopwatch"

[[ -n $(command -v code) ]] && alias c='code .'
           [[ -n ${TMUX} ]] && alias help='tmux_help'

export log_auth="/var/log/auth.log"
