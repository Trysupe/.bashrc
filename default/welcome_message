#!/bin/bash

[[ ${USER} == "root" ]] && return
[[ ${HOSTNAME} =~ (Asterix|Miraculix|ws-win-00224) ]] && return

text=$(curl https://whatthecommit.com/index.txt --max-time 2 -L 2>/dev/null)
[[ -z ${text} ]] && return

command="echo -e \"${text}\""
[[ -n $(command -v cowthink 2>/dev/null) ]] && command+=" | cowthink"
[[ -n $(command -v lolcat 2>/dev/null) ]] && command+=" | lolcat"

eval "${command}"
