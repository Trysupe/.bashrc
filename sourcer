#!/bin/bash

# entweder in .bash_profile oder sonst in .bashrc einfÃ¼gen

repo_location="/home/.../bashrc/"
"$repo_location""updater"

# Wenn kein Leerzeichen im Username ist:
for file in $(find "$repo_location"{default,$(hostname)} -type f 2>/dev/null); do
    source "$file"
done


# Wenn ein Leerzeichen im Username ist:
for file in $(find "$repo_location"{default,$(hostname)} -type f 2>/dev/null | sed 's/x S/x}S/g'); do
    file=$(echo $file | sed 's/x}S/x S/g')
    source "$file"
done
