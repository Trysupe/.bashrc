#!/bin/bash

# entweder in .bash_profile oder sonst in .bashrc einfügen

repo_location="/home/.../bashrc/"
#"$repo_location""updater"

# SED für den Fall, dass ein Leerzeichen im Verzeichnis (z.B. beim Username) ist
for file in $(find "$repo_location"/{default,$(hostname)} -type f 2>/dev/null | sed 's/ /}/g'); do
    file=$(echo $file | sed 's/}/ /g')
    source "$file"
done

# In de crontab einfügen
*/10 * * * * cd /home/$USER/bashrc/ && git pull
@reboot cd /home/$USER/bashrc/ && git pull

#Falls __git_ps1 nicht gefunden wurde
curl -o ~/.git-prompt.sh https://raw.githubusercontent.com/git/git/master/contrib/completion/git-prompt.sh
echo 'source ~/.git-prompt.sh' >> ~/.bashrc
